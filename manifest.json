{	
	"name": "Save My Pass",
	"version": "1.5",
	"description": "Create a useful tool that will help eliminate the worries of remembering and managing passwords by yourself.",
	"manifest_version": 2,
	"author":"Austin Jerich",
	"permissions": ["storage", "tabs", "activeTab"],

	"background":{
		"scripts": ["js/background.js"],
		"persistent": false
	},
	
	"content_security_policy": "script-src 'self' https://apis.google.com https://cdnjs.cloudflare.com; object-src 'self'",
	
	"browser_action": {
		"default_popup": "pages/login.html",
		"default_icon": "images/icon_48.png"
	},

	"icons": {
		"48": "images/icon_48.png"
	},

	"options_page": "pages/options.html"
}
